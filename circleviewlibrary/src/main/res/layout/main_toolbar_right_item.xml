<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fl_allMsg"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:paddingEnd="@dimen/dp_7"
             android:paddingStart="@dimen/dp_7"
    >

    <ImageView
        android:id="@+id/iv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        />

    <TextView
        android:id="@+id/tv_allMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/news_red"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="@dimen/dp_10"
        android:text="a465"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_9"
        android:visibility="visible"/>

</FrameLayout>